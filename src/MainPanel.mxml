<?xml version="1.0" encoding="utf-8"?>
<MainPanelBase 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns="*"
	>
			
	<mx:TabNavigator width="100%" height="100%">
			
		<mx:Canvas
			label="File"
			>
			<mx:VBox>
				<mx:Button
					label="Publish all"
					click="onPublishClick()"
				/>
				<mx:Button
					label="Compact all"
					click="onCompactClick()"
				/>
			</mx:VBox>
		</mx:Canvas>
		
		<mx:Canvas label="Lib" width="100%" height="100%">
			
			<mx:VBox width="100%" height="100%">
				<mx:Button
					label="Select all"
					click="onSelectAllClick()"
				/>
				
				<mx:HBox>
					<mx:Button
						label="Export as Class"
						click="onLinkageClick()"
					/>
					<mx:Button
						label="clear"
						click="onLinkageClearClick()"
					/>
				</mx:HBox>
				
				<mx:HBox>
					<mx:Button
						label="Compile (toFolder)"
						click="onCompileClick(compileDestFolder.text)"
						enabled="{compileDestFolder.text.length > 0}"
					/>
					<mx:TextInput
						width="30%"
						id="compileDestFolder"
						toolTip="destFolder"
						text="!compiled"
					/>
				</mx:HBox>
				
				<mx:Spacer />
				
				<mx:HBox width="100%">
					<mx:Button
						label="Rename (by mask)"
						click="onRenameClick()"
						enabled="{nameTemplateInput.text.length > 0}"
					/>
					<mx:TextInput
						width="30%"
						id="nameTemplateInput"
						toolTip="mask"
						text="copy_*"
					/>
				</mx:HBox>
				
				<mx:HBox width="100%">
					<mx:Button
						label="Rename (Find/Repl)"
						click="onRenameFRClick(renameFind.text, renameRepl.text)"
					/>
					<mx:TextInput
						width="30%"
						id="renameFind"
						toolTip="whatToFind"
						text=""
					/>
					<mx:TextInput
						width="30%"
						id="renameRepl"
						toolTip="replaceTo"
						text=""
					/>
				</mx:HBox>
				
				<mx:Button
					label="Duplicate Folder"
					click="onDuplicateFolderClick()"
				/>
				
				<mx:Spacer />
				
				<mx:Button
					label="Find in library"
					click="findInLibrary()"
				/>
			</mx:VBox>
			
		</mx:Canvas>
		
		<mx:Canvas
			label="Edit">
			<mx:VBox>
				<mx:Button
					label="Selection: Move to (0,0)"
					click="moveSelectionTo0()"
				/>
				<mx:Button
					label="Selection: Snap to pixels"
					click="snapToPixels()"
				/>
				<mx:Button
					label="Layer: add stop frame"
					click="newLayerAndStop()"
				/>
			</mx:VBox>
		</mx:Canvas>
		
		<mx:Canvas
			label="About">
			
			<mx:Label text=":)" />
			
		</mx:Canvas>
	
	</mx:TabNavigator>

</MainPanelBase>